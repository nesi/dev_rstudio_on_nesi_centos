BootStrap: docker
From: rocker/tidyverse:3.6.1

%runscript
    # create Nginx log folder
    mkdir /tmp/nginx

    # create nginx configuration
    sed "s/RSTUDIO_PORT/$1/; s/NGINX_PORT/$2/; s|BASE_URL|$3|" /home/rstudio/nginx.conf.template > /tmp/nginx.conf

    nginx -c /tmp/nginx.conf -p /tmp
    rserver --www-port "$1" --auth-none 0 --auth-pam-helper pam-helper

%post
    # RStudio server configuration
    echo "www-address=127.0.0.1" >> /etc/rstudio/rserver.conf
    echo "www-frame-origin=same" >> /etc/rstudio/rserver.conf
 
    # Nginx installation
    apt-get update && apt-get install -y nginx

    # create Nginx configuration template file for rstudio reverse proxy
    cat << "EOF" > /home/rstudio/nginx.conf.template
pid /tmp/nginx/nginx.pid;
error_log /tmp/nginx/error.log;
worker_processes 1;

events {
  worker_connections 1024;
}

http {
  root /tmp/nginx/;
  access_log /tmp/nginx/access.log;

  client_body_temp_path /tmp/nginx/client_body/;
  fastcgi_temp_path /tmp/nginx/fastcgi/;
  proxy_temp_path /tmp/nginx/proxy/;
  scgi_temp_path /tmp/nginx/scgi/;
  uwsgi_temp_path /tmp/nginx/uwsgi/;

  map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
  }

  server {
    listen NGINX_PORT;

    location / {
      proxy_pass http://localhost:RSTUDIO_PORT;
      proxy_redirect https://localhost:RSTUDIO_PORT/ https://$http_host/BASE_URL/;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection $connection_upgrade;
      proxy_read_timeout 20d;
    }
  }
}
EOF
